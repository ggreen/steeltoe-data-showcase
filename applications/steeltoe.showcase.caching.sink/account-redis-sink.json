{
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "ResolvedPlaceholderFromEnvVariables": "${PATH?NotFound}",
  "UnresolvedPlaceholder": "${SomKeyNotFound?NotFound}",
  "ResolvedPlaceholderFromJson": "${Logging:LogLevel:System?${Logging:LogLevel:Default}}",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Steeltoe": "Warning",
      "steeltoe.showcase.caching.sink": "Information"
    }
  },
  "Spring": {
    "Application":{
      "Name": "account-redis-sink"
    },
    "Cloud": {
      "Config": {
        "Uri": "http://localhost:8888",
        "Name": "account-redis-sink"
      }
    }
  }
  ,
  "Redis": {
    "Client": {
      "Host": "localhost",
      "Port": 6379
    }
  },
  "RabbitMQ": {
    "Client": {
      "Server": "${rabbit_host?localhost}",
      "Username": "${rabbit_user?guest}",
      "Password": "${rabbit_password?guest}",
      "VirtualHost": "${rabbit_vhost?/}",
      "Port": "${rabbit_port?5672}"
    }
  },
  "spring": {
    "cloud": {
      "stream": {
        "binder": "rabbit",
        "bindings": {
          "input": {
            "destination": "account.input-steeltoe",
            "group": "redis-sink-steeltoe",
            "consumer" : {
              "maxAttempts" : 2
            }
          }
        },
        "rabbit": {
          "bindings": {
            "input": {
              "consumer": {
                "autoBindDlq": "True"
              }
            }
          }
        }
      }
    }
  }
}